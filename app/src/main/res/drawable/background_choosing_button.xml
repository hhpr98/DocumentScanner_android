<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid android:color="#44FF9500" />
            <padding
                android:left="0dp"
                android:bottom="0dp"
                android:right="0dp"
                android:top="0dp"/>
            <corners android:radius="80dp" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="?choosing_button_color" />
            <padding
                android:left="0dp"
                android:bottom="0dp"
                android:right="0dp"
                android:top="0dp"/>
            <corners android:radius="80dp" />
        </shape>
    </item>
</selector>
