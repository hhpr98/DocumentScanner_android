<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraint_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:focusable="true"
    android:background="#121212"
    tools:context="com.tdh7.documentscanner.ui.scansession.WorkingSessionFragment">
    <View
        android:id="@+id/status_bar"
        android:layout_width="0dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@android:color/black"
        tools:cardBackgroundColor="#111"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        tools:scaleX="0.8"
        tools:scaleY="0.8"
        tools:translationY="0dp">
        <com.tdh7.documentscanner.controller.filter.FilterImageView
            android:id="@+id/filter_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:bitmapSrc="@drawable/brand"
            app:filter="quickView"
            app:filterClass="com.tdh7.documentscanner.controller.filter.canvas.QuickViewCanvasFilter"
            app:filterParameter="90"
            tools:drawBitmapIfNoFilter="false"
            />
    </androidx.cardview.widget.CardView>
    <com.tdh7.documentscanner.ui.widget.MarkerView
        android:id="@+id/markerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/card_view"
        app:layout_constraintBottom_toBottomOf="@id/card_view"
        app:layout_constraintStart_toStartOf="@id/card_view"
        app:layout_constraintEnd_toEndOf="@id/card_view"
        app:mode="cropper"
        app:showIfNoDetect="true"
        tools:scaleX="0.8"
        tools:scaleY="0.8"
        tools:translationY="0dp"
        app:cropperColor="@color/scanner_theme_color"
        app:startMode="preview"
        />

    <TextView
        android:id="@+id/button_one"
        android:layout_width="0dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/retake"
        android:textColor="@color/flatOrange"
        android:gravity="center"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toStartOf="@id/button_two"
        android:background="@drawable/circle_background_white_border"
        android:focusable="true"
        android:clickable="true"
        android:layout_marginEnd="8dp"
        app:elevation="2dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/button_two"
        android:layout_width="0dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="@id/button_one"
        app:layout_constraintBottom_toBottomOf="@id/button_one"
        app:layout_constraintStart_toEndOf="@id/button_one"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/circle_background_white"
        android:text="@string/keep_scan"
        android:textColor="@color/flatOrange"
        android:gravity="center"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginEnd="16dp"
        android:focusable="true"
        android:clickable="true"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/next_icon"
        android:layout_width="28dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="@id/button_two"
        app:layout_constraintEnd_toEndOf="@id/button_two"
        app:srcCompat="@drawable/ic_chevron_right_black_24dp"
        android:tint="@color/flatOrange"
        android:layout_marginEnd="28dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/page_note"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/back_button"
        app:layout_constraintBottom_toBottomOf="@id/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Choose zone to scan"
        android:textColor="?titleColor"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="16sp"
        android:fontFamily="@font/helvetica_font"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        app:elevation="2dp"
        android:focusable="true"
        android:clickable="true"
        />
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:padding="9dp"
        app:srcCompat="@drawable/ic_arrow_back_24dp"
        app:layout_constraintStart_toStartOf="@id/card_view"
        app:layout_constraintTop_toBottomOf="@id/status_bar"
        android:background="@drawable/circle_background_support_touch"/>
    <TextView
        android:id="@+id/action_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Import (1)"
        android:textSize="14sp"
        android:textColor="@color/flatOrange"
        app:layout_constraintTop_toTopOf="@id/back_button"
        app:layout_constraintBottom_toBottomOf="@id/back_button"
        android:gravity="center"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/background_active"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:textStyle="bold"
        android:elevation="4dp"
        android:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>